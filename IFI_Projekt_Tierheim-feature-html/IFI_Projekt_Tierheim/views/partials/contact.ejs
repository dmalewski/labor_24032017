
<!-- contact form -->
<div class="form innercontainer" >
   
		<h2 class="page-header">Kontakt</h2>
        <form action="/kontakt" method="POST">
            <div class="form-item">
                <label for="aName" title="Name">Name: *</label>
                <input id="aName" name="aName" type="text" tabindex="90" placeholder="Bitte Namen angeben" required />
            </div>
            <div class="form-item">
                <label for="aFirstname" title:"Vorname">Vorname:</label>
                <input id="aFirstname" type="text" class="DefaultInput" tabindex="20" name="aFirstName" value=""  placeholder="Bitte Vornamen angeben" />
            </div>
            <div class="form-item">
                <label for="aMail" title="E-Mail">E-Mail: *</label>
                <input id="aMail" name="aMail" type="text" tabindex="91" placeholder="Bitte E-Mailadresse angeben" required />
            </div>
            <div class="form-item">
                <label for="aPhone" title="Telefon">Telefon:</label>
                <input id="aPhone" name="aPhone" type="text" tabindex="21" placeholder="Bitte Telefonnummer angeben"/>
            </div>
            <div class="form-item">
                <label for="aSubject" title="Betreff">Betreff: *</label>
                <input id="aSubject" name="aSubject" type="text" tabindex="92" placeholder="Bitte Betreff angeben" required/>
            </div>
            <div class="form-item">
                <label for="aText" title="Nachricht">Nachricht: *</label>
                <textarea id="aText" name="aText" cols="40" rows="3" tabindex="93" placeholder="Ihre Nachricht an uns" required></textarea>
            </div>
            <div class="form-button">
                <input class="button-align" type="submit" value="Absenden" tabindex="94" />
                <input class="button-align" type="reset" value="Abbrechen" tabindex="95" />
            </div>


        </form>
